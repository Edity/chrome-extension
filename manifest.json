{
	"manifest_version": 2,
	"name": "Edity",
	"version": "0.4",
	"author": "Sophivorus",
	"description": "Edit the Web",
	"homepage_url": "https://edity.org",
	"offline_enabled": false,
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"https://edity.org/"
	],
	"background": {
		"scripts": [
			"dependencies/jquery.js",
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icons/icon19.png",
		"default_title": "Edity",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"exclude_matches": [
				"*://*/_/chrome/newtab*" // Exclude the new tab page
			],
			"run_at": "document_end",
			"css": [
				"dependencies/jquery-ui/jquery-ui.min.css",
				"dependencies/font-awesome/css/font-awesome.min.css"
			],
			"js": [
				"dependencies/jquery.js",
				"dependencies/jquery-ui/jquery-ui.min.js",
				"dependencies/rangy.js",
				"dependencies/hallo.js",
				"contentScript.js"
			]
		}
	],
	"web_accessible_resources": [
		"dependencies/*"
	]
}