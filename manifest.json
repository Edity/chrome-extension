{
	"manifest_version": 2,
	"name": "Edity",
	"version": "0.9",
	"author": "Sophivorus",
	"description": "Edit the Web",
	"homepage_url": "https://edity.org",
	"offline_enabled": false,
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"https://edity.org/"
	],
	"background": {
		"scripts": [
			"resources/jquery/jquery-core.js",
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "images/icon19.png",
		"default_title": "Edity",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"run_at": "document_end",
			"css": [
				"contentScript.css"
			],
			"js": [
				"resources/jquery/jquery-core.js",
				"resources/jquery/jquery-validation.js",
				"resources/rangy/rangy-core.js",
				"resources/rangy/rangy-classapplier.js",
				"resources/rangy/rangy-selectionsaverestore.js",
				"contentScript.js"
			]
		}
	],
	"web_accessible_resources": [
		"resources/*"
	]
}