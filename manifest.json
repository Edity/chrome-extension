{
	"manifest_version": 2,

	"name": "Edity",
	"description": "Edit any web site.",
	"version": "0.1",

	"permissions": [
		"tabs",
		"contextMenus",
		"http://edity.org/"
	],
	"background": {
		"scripts": [ "dependencies/jquery.js", "background.js" ]
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_icon": "icons/icon19.png",
		"default_title": "Edity",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [ "http://*/*", "https://*/*" ],
			"css": [
				"dependencies/jquery-ui/jquery-ui.min.css",
				"dependencies/font-awesome/css/font-awesome.min.css",
				"edity.css"
			],
			"js": [
				"dependencies/jquery.js",
				"dependencies/jquery-ui/jquery-ui.min.js",
				"dependencies/rangy.js",
				"dependencies/hallo.js",
				"content_script.js"
			]
		}
	],
	"web_accessible_resources": [
		"dependencies/*"
	]
}